<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/linelayout_addschedule">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_title"
            android:hint="@string/hint_title"
            android:textSize="24sp"
            android:padding="12dp"
            android:textColor="@color/black"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:background="@color/grey_100"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/grey_100"
            android:padding="5dp"
            android:src="@drawable/ic_assignment_black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hint_content"
            android:id="@+id/edittext_content"
            android:gravity="top"
            android:textSize="24sp"
            android:padding="12dp"
            android:background="@color/grey_100"
            android:textColor="@color/black"
            android:textColorHint="@color/black_dividers" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_400"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="1dp"
        android:background="@color/grey_100"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/grey_100"
            android:padding="5dp"
            android:src="@drawable/ic_place_black_24dp"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_location"
            android:id="@+id/textview_location"
            android:textSize="24sp"
            android:padding="12dp"
            android:background="@color/grey_100"
            android:textColor="@color/black"
            android:textColorHint="@color/black_dividers"
            android:gravity="center"
            android:text="請選擇位置"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_400"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="1dp"
        android:background="@color/grey_100"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/grey_100"
            android:padding="5dp"
            android:src="@drawable/ic_timer_black_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/hint_time_start"
                    android:textSize="24sp"
                    android:padding="12dp"
                    android:background="@color/grey_100"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_dividers"
                    android:id="@+id/textview_startdate"
                    android:gravity="center"
                    android:text="開始日期"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/textview_starttime"
                    android:hint="@string/hint_time"
                    android:textSize="24sp"
                    android:padding="12dp"
                    android:background="@color/grey_100"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_dividers"
                    android:gravity="center"
                    android:text="開始時間"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/hint_time_end"
                    android:textSize="24sp"
                    android:padding="12dp"
                    android:background="@color/grey_100"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_dividers"
                    android:id="@+id/textview_enddate"
                    android:gravity="center"
                    android:text="結束日期"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:hint="@string/hint_time"
                    android:textSize="24sp"
                    android:padding="12dp"
                    android:background="@color/grey_100"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_dividers"
                    android:id="@+id/textview_endtime"
                    android:gravity="center"
                    android:text="結束時間"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
